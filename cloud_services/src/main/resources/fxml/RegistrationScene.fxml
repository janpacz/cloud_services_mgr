<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="cloud_services.cloud_services.working_window.RegistrationController">
    <children>
        <fx:include source="menu_bars/LoginRegisterMenuBar.fxml"/>
        <StackPane>
            <children>
                <Group StackPane.alignment="CENTER">
                    <children>
                        <AnchorPane>
                            <children>   
                                <Label AnchorPane.leftAnchor="120" AnchorPane.topAnchor="50" text="Rejestracja" />
                                <Label AnchorPane.leftAnchor="0" AnchorPane.topAnchor="105" text="Login" />
                                <TextField AnchorPane.leftAnchor="120"  AnchorPane.topAnchor="100" fx:id="loginField"/>
                                <Label AnchorPane.leftAnchor="0" AnchorPane.topAnchor="155" text="Hasło" />
                                <PasswordField AnchorPane.leftAnchor="120" AnchorPane.topAnchor="150" fx:id="passwordField"/>
                                <Label AnchorPane.leftAnchor="0" AnchorPane.topAnchor="205" text="Powtórz hasło" />
                                <PasswordField AnchorPane.leftAnchor="120" AnchorPane.topAnchor="200" fx:id="repeatPasswordField"/>
                                <Label AnchorPane.leftAnchor="0" AnchorPane.topAnchor="250" fx:id="communicateLabel" />
                                <Button AnchorPane.leftAnchor="120" AnchorPane.topAnchor="300" text="Zarejestruj się" onAction="#registerButtonAction" />                     
                            </children>
                        </AnchorPane> 
                    </children>
                </Group>
            </children>
        </StackPane>       
    </children>
</VBox>
