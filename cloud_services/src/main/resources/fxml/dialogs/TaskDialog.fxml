<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="470.0" prefWidth="470.0" xmlns:fx="http://javafx.com/fxml/1" >
    <children>
        <Group StackPane.alignment="CENTER">
            <children>
                <AnchorPane>
                    <children>
                        <Label AnchorPane.leftAnchor="0" AnchorPane.topAnchor="5" text="Nazwa" />
                        <TextField AnchorPane.leftAnchor="60" AnchorPane.topAnchor="0" prefWidth="370" fx:id="nameField"/>
                        <Label AnchorPane.leftAnchor="0" AnchorPane.topAnchor="40" text="Rozmiar danych do wysłania" />
                        <TextField AnchorPane.leftAnchor="210" AnchorPane.topAnchor="35" prefWidth="220" fx:id="dataSizeField"/>
                        <Label AnchorPane.leftAnchor="0" AnchorPane.topAnchor="75" text="Liczba operacji" />
                        <TextField AnchorPane.leftAnchor="210" AnchorPane.topAnchor="70" prefWidth="220" fx:id="operationsAmountField"/>
                        <Label AnchorPane.leftAnchor="0" AnchorPane.topAnchor="110" text="Opis" />
                        <TextArea AnchorPane.leftAnchor="210" AnchorPane.topAnchor="105" prefWidth="220" prefHeight="100" fx:id="descriptionTextArea"/>
                        <Label AnchorPane.leftAnchor="0" AnchorPane.topAnchor="215" text="Wybrana kategoria:" />
                        <TextArea AnchorPane.leftAnchor="0" AnchorPane.topAnchor="240" prefWidth="200" prefHeight="100" editable="false" fx:id="categoryInfoTextArea"/>
                        <Button AnchorPane.leftAnchor="210" AnchorPane.topAnchor="240" prefWidth="220" text="Wybierz kategorię" onAction="#chooseCategoryButtonAction"/>
                        <Label AnchorPane.leftAnchor="0" AnchorPane.topAnchor="350" fx:id="communicateLabel" />
                        <Button AnchorPane.leftAnchor="20" AnchorPane.topAnchor="375" prefWidth="200" text="Zapisz nowe zadanie" onAction="#saveNewElementButtonAction"/>
                        <Button AnchorPane.leftAnchor="230" AnchorPane.topAnchor="375" prefWidth="200" text="Zapisz zmiany w zadaniu" fx:id="saveChangesInElementButton" onAction="#saveChangesInElementButtonAction"/>
                        <Button AnchorPane.leftAnchor="125" AnchorPane.topAnchor="415" prefWidth="200" text="Zakończ" onAction="#closeButtonAction"/>          
                    </children>
                </AnchorPane>
            </children>
        </Group>  
    </children>
</StackPane>
